{   
    "logging": {
        "logs": {
            "default": {
                "level": "DEBUG"
            }
        }
    },
    "apps": {
      "http": {
        "http_port": 9080,
        "https_port": 9443,
        "servers": {
          "oapi-example": {
            "listen": [
              "127.0.0.1:9443"
            ],
            "routes": [
              {
                "group": "oapi",
                "match": [
                  {
                    "path": [
                      "/api*"
                    ]
                  }
                ],
                "handle": [
                  {
                    "handler": "openapi_validator",
                    "filepath": "examples/petstore-expanded.yaml",
                    "validate_routes": true,
                    "validate_requests": true,
                    "validate_responses": true,
                    "validate_servers": true,
                    "validate_security": true,
                    "path_prefix_to_be_trimmed": "",
                    "additional_servers": [
                      "https://localhost:9443/api"
                    ],
                    "enforce": true,
                    "log": true
                  },
                  {
                    "handler": "expanded_petstore_api_example"
                  },
                  {
                    "handler": "headers",
                    "response": {
                      "set": {
                        "Server": ["caddy-openapi-validator-example-expanded"]
                      }
                    }
                  }
                ]
              }
            ],
            "logs": {}
          }
        }
      },
      "tls": {
        "automation": {
          "policies": [
            {
              "subjects": ["localhost"],
              "issuer":{
                "module": "internal"
              },
              "on_demand": true
            }
          ]
        }
      }
    }
  }